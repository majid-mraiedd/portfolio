---
import Layout from '../layouts/Layout.astro';
import content from '../data/content.json';
import { Mail, Globe, Cpu, Linkedin } from 'lucide-astro';

const { personal } = content;

const fixPath = (path) => {
  if (path.startsWith('http')) return path;
  const base = import.meta.env.BASE_URL.replace(/\/$/, '');
  return path.startsWith('/') ? `${base}${path}` : path;
};
---

<Layout title={`${personal.name} | Digital Card`}>
  <div class="card-page">
    <div class="background-decor">
      <div class="blob-1"></div>
      <div class="blob-2"></div>
    </div>

    <div class="card-container">
      <div class="business-card glass">
        <!-- Space Side -->
        <div class="side space-side">
          <div class="space-content">
            <div class="mini-constellation">
              <div class="star"></div><div class="star"></div><div class="star"></div>
            </div>
            <div class="brand">
              <div class="tech-icon">
                <Cpu size={32} />
              </div>
              <h1>{personal.name.split(' ')[0]} <span class="last-name">{personal.name.split(' ')[1]}</span></h1>
              <p class="role">AI & SYSTEMS ENGINEER</p>
            </div>
          </div>
          <div class="space-nebula"></div>
        </div>

        <div class="divider">
          <div class="beam"></div>
        </div>

        <!-- Gold Side -->
        <div class="side gold-side">
          <div class="gold-content">
            <div class="qr-wrapper">
              <div class="qr-inner">
                <img src={fixPath('/images/card-qr.png')} alt="Digital Portfolio" />
              </div>
              <div class="qr-scan-line"></div>
            </div>
            
            <div class="contact-grid">
              <div class="contact-item">
                <Globe size={16} />
                <span>majid.dev</span>
              </div>
              <div class="contact-item">
                <Mail size={16} />
                <span>{personal.email}</span>
              </div>
              <div class="contact-item">
                <Linkedin size={16} />
                <span>/in/majid-mraiedd</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card-actions">
        <button class="action-btn download-btn" onclick="window.print()">
          Download Card
        </button>
        <a href={fixPath('/')} class="action-btn secondary">
          Back to Portfolio
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .card-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: #050505;
    overflow: hidden;
    position: relative;
    font-family: 'Outfit', sans-serif;
  }

  /* Background Decorations */
  .background-decor {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .blob-1, .blob-2 {
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
    filter: blur(80px);
    border-radius: 50%;
  }

  .blob-1 { top: -10%; left: -10%; }
  .blob-2 { bottom: -10%; right: -10%; background: radial-gradient(circle, rgba(197, 160, 89, 0.1) 0%, transparent 70%); }

  .card-container {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }

  .business-card {
    width: 900px;
    height: 500px;
    display: flex;
    border-radius: 32px;
    overflow: hidden;
    box-shadow: 0 40px 100px rgba(0,0,0,0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .business-card:hover {
    transform: translateY(-10px) rotateX(2deg) rotateY(-2deg);
  }

  .side {
    flex: 1;
    position: relative;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  /* Space Side Styling */
  .space-side {
    background: #0a0a0c;
    color: white;
    overflow: hidden;
  }

  .space-nebula {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200%;
    height: 200%;
    background: 
      radial-gradient(circle at 30% 30%, rgba(139, 92, 246, 0.2) 0%, transparent 40%),
      radial-gradient(circle at 70% 70%, rgba(197, 160, 89, 0.1) 0%, transparent 40%);
    opacity: 0.6;
    animation: rotateNebula 20s linear infinite;
  }

  @keyframes rotateNebula {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  .space-content {
    position: relative;
    z-index: 2;
  }

  .tech-icon {
    color: var(--primary);
    margin-bottom: 2rem;
    background: rgba(197, 160, 89, 0.1);
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20px;
    border: 1px solid rgba(197, 160, 89, 0.3);
  }

  .space-side h1 {
    font-size: 3.5rem;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.04em;
    font-weight: 700;
  }

  .last-name {
    display: block;
    color: var(--primary);
  }

  .role {
    margin-top: 1.5rem;
    font-size: 0.9rem;
    font-weight: 800;
    letter-spacing: 0.3em;
    color: #888;
    text-transform: uppercase;
  }

  /* Divider Styling */
  .divider {
    width: 2px;
    background: rgba(255, 255, 255, 0.05);
    position: relative;
  }

  .beam {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, transparent, var(--primary), transparent);
    animation: beamTravel 4s linear infinite;
  }

  @keyframes beamTravel {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(100%); }
  }

  /* Gold Side Styling */
  .gold-side {
    background: #fff;
    color: #000;
    align-items: center;
  }

  .gold-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }

  .qr-wrapper {
    position: relative;
    padding: 1.5rem;
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .qr-inner {
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .qr-inner img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .qr-scan-line {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--primary);
    animation: scan 3s ease-in-out infinite;
    box-shadow: 0 0 15px var(--primary);
  }

  @keyframes scan {
    0%, 100% { top: 0; opacity: 0; }
    5%, 95% { opacity: 1; }
    50% { top: 100%; }
  }

  .contact-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.95rem;
    font-weight: 600;
    color: #444;
  }

  .contact-item span {
    color: #666;
  }

  /* Actions */
  .card-actions {
    display: flex;
    gap: 1.5rem;
  }

  .action-btn {
    padding: 1.25rem 2.5rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s;
    text-decoration: none;
  }

  .download-btn {
    background: var(--primary);
    color: white;
    border: none;
    box-shadow: 0 10px 20px var(--primary-glow);
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 30px var(--primary-glow);
  }

  .secondary {
    background: rgba(255, 255, 255, 0.05);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  /* Responsive Styling */
  @media (max-width: 1000px) {
    .business-card {
      width: 100%;
      height: auto;
      flex-direction: column;
    }
    .divider {
      width: 100%;
      height: 2px;
    }
    .beam {
      width: 100%;
      height: 100%;
      background: linear-gradient(to right, transparent, var(--primary), transparent);
      animation: beamTravelHoriz 4s linear infinite;
    }
    @keyframes beamTravelHoriz {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }
    .side {
      padding: 3rem 2rem;
    }
    .space-side {
      text-align: center;
      align-items: center;
    }
    .side h1 {
      font-size: 2.5rem;
    }
  }

  @media print {
    .card-actions, .background-decor { display: none; }
    .card-page { padding: 0; background: white; }
    .business-card { 
      box-shadow: none; 
      border: 1px solid #eee;
      width: 8.5cm; /* Standard card size for print */
      height: 5.5cm;
    }
    .side { padding: 1.5rem; }
  }
</style>
